<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray_100">

        <RelativeLayout
            android:id="@+id/layMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/yellow_bg"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:padding="@dimen/_10sdp">



            <ImageView
                android:id="@+id/icSucces"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_success"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tvTripEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_trip_has_ended"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/textColor"
                android:layout_below="@+id/icSucces"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_10sdp"
                />



            <RelativeLayout
                android:id="@+id/rlTripDetail"
                android:layout_below="@+id/tvTripEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_bg"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                >
                <TextView
                    android:id="@+id/tvFromTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:39"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    />

                <TextView
                    android:id="@+id/tvToTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:39"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/view1"
                    android:layout_marginTop="-8dp"
                    />

                <ImageView
                    android:id="@+id/ivfrom"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:background="@drawable/small_red_circle"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_toRightOf="@+id/tvFromTime"
                    />
                <TextView
                    android:id="@+id/tvFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1, Thrale Street,\n London, SE19HW, UK"
                    android:layout_toRightOf="@+id/ivfrom"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/textColor"
                    />
                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@color/textColor"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_below="@+id/ivfrom"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:layout_toRightOf="@+id/tvFromTime"
                    />
                <ImageView
                    android:id="@+id/ivto"
                    android:layout_below="@+id/view1"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:background="@drawable/down_arrow_black"
                    android:layout_toRightOf="@+id/tvFromTime"
                    />
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_toRightOf="@id/view1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_below="@+id/tvFrom"
                    android:layout_marginTop="@dimen/_15sdp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view2"
                    android:layout_toRightOf="@id/ivto"
                    >
                    <TextView
                        android:id="@+id/etDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ealing Broadway Shopping \n Centre, London, W55JY, UK"
                        android:inputType="none"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:textSize="@dimen/_12sdp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/textColor"
                        />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:id="@+id/rlPayment"
                android:layout_below="@+id/rlTripDetail"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/rounded_white_bg"
                >
                <ImageView
                    android:id="@+id/ivCard"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_mastercard"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="**** 8295"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_toRightOf="@id/ivCard"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 85"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    />



            </RelativeLayout>





        </RelativeLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/rounded_green_bg"
            android:fontFamily="@font/poppins_medium"
            android:padding="@dimen/_7sdp"
            android:text="@string/ok1"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />


    </RelativeLayout>
</layout>