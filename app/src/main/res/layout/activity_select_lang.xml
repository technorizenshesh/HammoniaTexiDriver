<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_gray_100">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_above="@+id/llLanguage"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_80sdp"
        />


    <LinearLayout
        android:id="@+id/llLanguage"
        android:layout_above="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_language"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"

            android:padding="@dimen/_10sdp">


            <androidx.cardview.widget.CardView
                android:id="@+id/btnEnglish"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_120sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_7sdp"
                app:cardElevation="@dimen/_5sdp">
                <RelativeLayout
                    android:id="@+id/rlEnglish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivEnglish"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_8sdp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/english"
                        android:layout_below="@+id/ivEnglish"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_2sdp"/>


                       <ImageView
                           android:id="@+id/ivEnglishChk"
                           android:layout_width="@dimen/_20sdp"
                           android:layout_height="@dimen/_20sdp"
                           android:layout_alignParentRight="true"
                           android:layout_marginRight="@dimen/_15sdp"
                           android:layout_marginTop="@dimen/_12sdp"
                           android:src="@drawable/check"/>



                </RelativeLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/btnFrance"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_120sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_7sdp"
                app:cardElevation="@dimen/_5sdp">
                <RelativeLayout
                    android:id="@+id/rlFrance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivFrance"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/france"
                        android:layout_below="@+id/ivFrance"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_2sdp"/>


                    <ImageView
                        android:id="@+id/ivFranceChk"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:src="@drawable/check"
                        android:visibility="gone"/>

                </RelativeLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>





    </LinearLayout>



    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_in_now"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/rounded_black_bg"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/rounded_yellow_bg"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />




    </LinearLayout>


</RelativeLayout>
</layout>